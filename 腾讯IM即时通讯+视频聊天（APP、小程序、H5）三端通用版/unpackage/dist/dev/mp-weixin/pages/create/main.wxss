.container {
  height: 100vh;
  background-color: $background;
}
.container .form-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 12px 24px;
  background-color: $white;
}
.container .form-item label {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .required::before {
  content: '*';
  color: $danger;
  position: absolute;
  left: 12px;
}
button {
  width: 80vw;
  background-color: $primary;
  color: #fff;
  font-size: 16px;
  position: absolute;
  bottom: 24px;
  left: 50%;
  margin-left: -40vw;
}
.clicked {
  background-color: $dark-primary;
}

