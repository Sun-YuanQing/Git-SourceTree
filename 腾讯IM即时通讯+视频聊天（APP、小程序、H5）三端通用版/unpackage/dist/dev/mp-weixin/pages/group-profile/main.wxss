.group-detail-wrapper {
  height: 100vh;
  background-color: $background;
}
.group-detail-wrapper .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  background-color: $white;
  padding-bottom: 18px;
  margin-bottom: 8px;
}
.group-detail-wrapper .header .member,
.group-detail-wrapper .header .show-more-btn,
.group-detail-wrapper .header .add-member-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
