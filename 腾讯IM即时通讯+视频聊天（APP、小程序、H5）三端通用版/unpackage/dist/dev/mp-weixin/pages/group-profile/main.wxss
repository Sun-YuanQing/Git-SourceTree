.group-detail-wrapper .header .show-more-btn .name,
.group-detail-wrapper .header .add-member-btn .name {
  width: 40px;
  font-size: 12px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.group-detail-wrapper .header .member .avatar,
.group-detail-wrapper .header .show-more-btn .avatar,
.group-detail-wrapper .header .add-member-btn .avatar {
  width: 40px;
  height: 40px;
}
.group-detail-wrapper .header .show-more-btn .name,
.group-detail-wrapper .header .add-member-btn .name {
  font-size: 10px;
}
.group-action {
  margin-top: 8px;
}
.quit {
  color: $danger;
}
.user-id-input {
  margin: 12px auto;
  width: 80%;
  padding: 0 12px;
  border-bottom: 1px solid $light-background;
