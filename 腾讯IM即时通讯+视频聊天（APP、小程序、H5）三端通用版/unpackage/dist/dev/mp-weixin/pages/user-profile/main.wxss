.cell-group {
  margin-top: 10px;
}
.signature {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 50vw;
  color: $secondary;
}
.container {
  height: 100vh;
  background-color: $background;
}
.container .info-card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 16px;
  background-color: $white;
}
.container .info-card .avatar {
  width: 80px;
  height: 80px;
  -webkit-border-radius: 8px;
          border-radius: 8px;
  margin-right: 14px;
}
.container .info-card .basic .username {
  font-size: 24px;
  line-height: 36px;
  font-weight: 600;
}
.container .info-card .basic .user-id {
  font-size: 12px;
  color: $secondary;
}
.container .action-list {
  position: fixed;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  padding: 12px;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.container .action-list button {
  -webkit-flex-basis: 40%;
          flex-basis: 40%;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  height: 40px;
  line-height: 40px;
  font-size: 18px;
  margin: 0;
}
.container .action-list button:after {
  border: none;
}
.container .action-list .send-messsage {
  background-color: $primary;
  color: $white;
}
.container .action-list .video-call {
  margin-right: 8px;
  background-color: $light-button;
  overflow: visible;
}
.container .action-list .video-call .new-badge {
  position: absolute;
  right: -5px;
  top: -5px;
  width: 34px;
  height: 16px;
  line-height: 16px;
  -webkit-border-radius: 8px;
          border-radius: 8px;
  font-size: 10px;
  color: $white;
  background-color: $danger;
}

